<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Grooveix" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="statusBarForeground">@color/black</item>

        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowNoTitle">true</item>

        <item name="colorOnSurfaceVariant">#80000000</item>

        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Theme.RemoveSplashScreenTheme" parent="@style/Theme.Grooveix">
        <item name="android:windowIsTranslucent">false</item>
    </style>

</resources>